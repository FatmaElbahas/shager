    <!-- Join Request Modal -->
    <div class="modal fade" id="joinRequestModal" tabindex="-1" aria-labelledby="joinRequestModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-md">
            <div class="modal-content border-0 shadow-lg" style="border-radius: 32px;">
                <div class="modal-header border-0">
                    <h1 class="modal-title fw-bold text-end w-100" id="joinRequestModalLabel"
                        style="color: black; font-size: 32px;">
                        طلب انضمام
                    </h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body px-4 py-3">
                    <form id="joinRequestForm">
                        <div class="row">
                            <!-- الاسم الأول -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold">الاسم الأول</label>
                                <input type="text" class="form-control rounded-3 py-2" name="user_name" id="user_name"
                                    placeholder="أدخل الاسم الأول" required>
                            </div>

                            <!-- اسم العائلة -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold">اسم العائلة</label>
                                <input type="text" class="form-control rounded-3 py-2" name="family_name"
                                    id="family_name" placeholder="أدخل اسم العائلة" required>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">الايميل</label>
                            <input type="email" id="user_email" name="user_email" class="form-control rounded-3 py-2"
                                placeholder="الإيميل" required>
                        </div>

                        <!-- الوظيفة -->
                        <div class="mb-3">
                            <label class="form-label fw-semibold">الوظيفة</label>
                            <input type="text" class="form-control rounded-3 py-2" name="job" id="job"
                                placeholder="أدخل الوظيفة">
                        </div>

                        <!-- تاريخ الميلاد -->
                        <div class="mb-3">
                            <label class="form-label fw-semibold">تاريخ الميلاد</label>
                            <input type="date" class="form-control rounded-3 py-2" name="birth_date" id="birth_date">
                        </div>

                        <!-- الحالة الاجتماعية -->
                        <div class="mb-3">
                            <label class="form-label fw-semibold">الحالة الاجتماعية</label>
                            <div class="d-flex gap-3 mt-2">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="social_status" id="single"
                                        value="single">
                                    <label class="form-check-label" for="single">أعزب</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="social_status" id="married"
                                        value="married">
                                    <label class="form-check-label" for="married">متزوج</label>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="tree_id" class="form-label fw-semibold">اختر الشجرة</label>
                            <select name="tree_id" id="tree_id" required class="form-select custom-select">
                                <option value="" class="text-muted">-- اختر شجرة --</option>
                                <!-- هيتعمل populate من API -->
                            </select>
                        </div>

                        <!-- رقم الهاتف -->
                        <div class="mb-3">
                            <label class="form-label fw-semibold">رقم الهاتف</label>
                            <input type="tel" class="form-control rounded-3 py-2" name="user_phone" id="user_phone"
                                placeholder="أدخل رقم الهاتف" required>
                        </div>

                        <!-- سبب الانضمام -->
                        <div class="mb-4">
                            <label class="form-label fw-semibold">سبب الانضمام</label>
                            <textarea class="form-control rounded-3" name="user_message" id="user_message" rows="4"
                                placeholder="اكتب سبب رغبتك في الانضمام إلى العائلة..."></textarea>
                        </div>

                        <div class="modal-footer border-0 justify-content-center pb-4">
                            <button type="button" class="btn btn-outline-secondary rounded-pill px-4 me-2"
                                data-bs-dismiss="modal">
                                إلغاء
                            </button>
                            <button type="button" class="btn btn-custom rounded-pill px-4" id="submitJoinRequest">
                                <span class="btn-text">إرسال الطلب</span>
                                <span class="spinner-border spinner-border-sm d-none ms-2" role="status"></span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

