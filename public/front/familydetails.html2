                        <div class="mb-3">
                            <label class="form-label fw-semibold">رقم الهاتف</label>
                            <input type="tel" class="form-control rounded-3 py-2" name="user_phone" id="user_phone"
                                placeholder="أدخل رقم الهاتف" required>
                        </div>

                        <!-- الرسالة -->
                        <div class="mb-4">
                            <label class="form-label fw-semibold">الرسالة</label>
                            <textarea class="form-control rounded-3" name="user_message" id="user_message" rows="5"
                                placeholder="اكتب رسالتك هنا..." required></textarea>
                        </div>
                        <div class="modal-footer border-0 justify-content-center pb-4">
                            <button type="button" class="btn btn-outline-secondary rounded-pill px-4 me-2"
                                data-bs-dismiss="modal">
                                إلغاء
                            </button>
                            <button type="button" class="btn btn-custom rounded-pill px-4" id="submitMessage">
                                <span class="btn-text">إرسال الرسالة</span>
                                <span class="spinner-border spinner-border-sm d-none ms-2" role="status"></span>
                            </button>
                        </div>
                    </form>
                </div>


            </div>
        </div>
    </div>

    <!-- Js -->
    <script src="js/all.min.js"></script>
    <script src="js/bootstrap.bundle.min.js"></script>
    <script src="js/notify.js"></script>
    <script src="js/familydetails.js"></script>
</body>

